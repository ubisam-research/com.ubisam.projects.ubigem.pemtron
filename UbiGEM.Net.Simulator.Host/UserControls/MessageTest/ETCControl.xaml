<UserControl x:Class="UbiGEM.Net.Simulator.Host.UserControls.MessageTest.ETCControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid>
        <GroupBox Header="ETC Message Test" VerticalAlignment="Center" MouseUp="GroupBox_MouseUp">
            <Expander Name="expander" IsExpanded="False" Margin="0, -49, -2, 0" FlowDirection="RightToLeft" Padding="0 10 0 0">
                <WrapPanel Orientation="Horizontal" Margin="0" FlowDirection="LeftToRight" >
                    <WrapPanel.Resources>
                        <Style TargetType="Grid">
                            <Setter Property="Margin" Value="5, 7, 5, 0"/>
                        </Style>
                    </WrapPanel.Resources>
                    <Grid Width="150" Height="32">
                        <Button Content="S2F17" ToolTip="Date and Time Request" Click="btnS2F17_Click" />
                    </Grid>
                    <Grid Width="150" Height="32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="S2F25" ToolTip="Loopback Diagnostic Request" Click="btnS2F25_Click" />
                        <Button Grid.Column="2" Content="Edit" Click="btnS2F25Edit_Click" />
                    </Grid>
                    <Grid Width="150" Height="32">
                        <Button Grid.Column="0" Content="S2F31" ToolTip="Date and Time Set Request" Click="btnS2F31_Click" />
                    </Grid>
                    <Grid Width="150" Height="32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="S10F3" ToolTip="Terminal Display, Single" Click="btnS10F3_Click" />
                        <Button Grid.Column="2" Content="Edit" Click="btnS10F3Edit_Click" />
                    </Grid>
                    <Grid Width="150" Height="32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="S10F5" ToolTip="Terminal Display, Multi-Block" Click="btnS10F5_Click" />
                        <Button Grid.Column="2" Content="Edit" Click="btnS10F5Edit_Click" />
                    </Grid>
                </WrapPanel>
            </Expander>
        </GroupBox>
    </Grid>
</UserControl>