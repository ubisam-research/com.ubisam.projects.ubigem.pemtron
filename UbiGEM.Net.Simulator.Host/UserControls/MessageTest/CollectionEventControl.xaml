<UserControl x:Class="UbiGEM.Net.Simulator.Host.UserControls.MessageTest.CollectionEventControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid>
        <GroupBox Header="Collection Event Message Test" VerticalAlignment="Center" MouseUp="GroupBox_MouseUp">
            <Expander Name="expander" IsExpanded="False" Margin="0, -49, -2, 0" FlowDirection="RightToLeft" Padding="0 10 0 0">
                <WrapPanel Orientation="Horizontal" Margin="0" FlowDirection="LeftToRight">
                    <WrapPanel.Resources>
                        <Style TargetType="Grid">
                            <Setter Property="Margin" Value="5, 7, 5, 0"/>
                        </Style>
                    </WrapPanel.Resources>
                    <Grid Width="150" Height="32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="S1F23" ToolTip="Data Variable Namelist Request" Click="btnS1F23_Click" />
                        <Button Grid.Column="2" Content="Edit" Click="btnS1F23Edit_Click" />
                    </Grid>
                    <Grid Width="310" Height="32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Name="cboCollectionEvent" Grid.Column="0" Grid.Row="0" DropDownOpened="cboCollectionEvent_DropDownOpened" />
                        <Button Grid.Column="2" Grid.Row="0" Content="S6F15" ToolTip="Event Report Request" Click="btnS6F15_Click" />
                    </Grid>
                </WrapPanel>
            </Expander>
        </GroupBox>
    </Grid>
</UserControl>