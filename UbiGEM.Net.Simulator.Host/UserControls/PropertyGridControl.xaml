<UserControl x:Class="UbiGEM.Net.Simulator.Host.UserControls.PropertyGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:swf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="350">
    <Grid>
        <WindowsFormsHost>
            <swf:PropertyGrid x:Name="pgr" HelpVisible="False" LineColor="#FF252C34"
                              ViewBackColor="#FF192028" ViewForeColor="#FFB7B7B7"
                              PropertySort="NoSort" ToolbarVisible="False"/>
        </WindowsFormsHost>
    </Grid>
</UserControl>