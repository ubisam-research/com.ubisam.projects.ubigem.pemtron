<UserControl x:Class="UbiGEM.Net.Simulator.Host.UserControls.UCUpDownButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UbiGEM.Net.Simulator.Host.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="30">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="33" />
            <RowDefinition Height="33" />
            <RowDefinition Height="33" />
            <RowDefinition Height="33" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Name="btnFirst" Grid.Row="1" Click="btnFirst_Click" Style="{DynamicResource UbiSamThemeButton}">
            <Image Source="/UbiGEM.Net.Simulator.Host;component/Resources/Images/list_in_out_s_bt_1_a.png"/>
        </Button>
        <Button Name="btnUp" Grid.Row="2" Click="btnUp_Click" Style="{DynamicResource UbiSamThemeButton}">
            <Image Source="/UbiGEM.Net.Simulator.Host;component/Resources/Images/list_in_out_s_bt_2_a.png"/>
        </Button>
        <Button Name="btnDown" Grid.Row="3" Click="btnDown_Click" Style="{DynamicResource UbiSamThemeButton}">
            <Image Source="/UbiGEM.Net.Simulator.Host;component/Resources/Images/list_in_out_s_bt_3_a.png"/>
        </Button>
        <Button Name="btnLast" Grid.Row="4" Click="bntLast_Click" Style="{DynamicResource UbiSamThemeButton}">
            <Image Source="/UbiGEM.Net.Simulator.Host;component/Resources/Images/list_in_out_s_bt_4_a.png"/>
        </Button>
    </Grid>
</UserControl>
