<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UbiSam.Common.Themes.WPF.Themes">
    <Style x:Key="UbiSamThemeGridSplitterPreview">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Fill="Red"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="UbiSamThemeGridSplitter" TargetType="{x:Type GridSplitter}">
        <Setter Property="Background" Value="{DynamicResource UbiSamThemeBackground}"/>
        <Setter Property="PreviewStyle" Value="{StaticResource UbiSamThemeGridSplitterPreview}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid>
                        <Border Background="{TemplateBinding Background}">
                            <Border x:Name="inBorder" Background="Transparent"/>
                        </Border>

                        <Image x:Name="previewImage" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="ResizeDirection" Value="Rows">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="Height" Value="31"/>
                            <Setter TargetName="previewImage" Property="Source" Value="pack://application:,,,/UbiSam.Common.Themes.WPF;component/Resources/Images/grt_move_w.png"/>
                            <Setter TargetName="previewImage" Property="Width" Value="140"/>
                            <Setter TargetName="previewImage" Property="Height" Value="20"/>
                            <Setter TargetName="inBorder" Property="Height" Value="5"/>
                            <Setter TargetName="inBorder" Property="BorderThickness" Value="0,1,0,1"/>
                            <Setter TargetName="inBorder" Property="BorderBrush">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="{DynamicResource UbiSamThemeGridSplitterUpBorderBrush}" Offset="0.0" />
                                        <GradientStop Color="{DynamicResource UbiSamThemeGridSplitterDownBorderBrush}" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="ResizeDirection" Value="Columns">
                            <Setter Property="VerticalAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="Width" Value="31"/>
                            <Setter TargetName="previewImage" Property="Source" Value="pack://application:,,,/UbiSam.Common.Themes.WPF;component/Resources/Images/grt_move_h.png"/>
                            <Setter TargetName="previewImage" Property="Width" Value="20"/>
                            <Setter TargetName="previewImage" Property="Height" Value="140"/>
                            <Setter TargetName="inBorder" Property="Width" Value="5"/>
                            <Setter TargetName="inBorder" Property="BorderThickness" Value="1,0,1,0"/>
                            <Setter TargetName="inBorder" Property="BorderBrush">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="{DynamicResource UbiSamThemeGridSplitterUpBorderBrush}" Offset="0.0" />
                                        <GradientStop Color="{DynamicResource UbiSamThemeGridSplitterDownBorderBrush}" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>