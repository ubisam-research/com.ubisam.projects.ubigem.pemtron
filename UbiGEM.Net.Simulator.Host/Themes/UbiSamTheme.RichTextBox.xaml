<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UbiSam.Common.Themes.WPF.Themes">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/UbiSam.Common.Themes.WPF;component/Themes/UbiSamTheme.TextBox.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="UbiSamThemeRichTextBox" TargetType="{x:Type RichTextBox}" BasedOn="{StaticResource UbiSamThemeTextBoxBase}">
        <Setter Property="Foreground" Value="{DynamicResource UbiSamThemeControlForeground}"/>
        <Setter Property="Padding" Value="43,24,0,24"/>
    </Style>
</ResourceDictionary>