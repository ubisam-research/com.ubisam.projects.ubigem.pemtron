<Window x:Class="UbiGEM.Net.Simulator.Host.Popup.SettingObjectSelectorForS14F1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UbiGEM.Net.Simulator.Host.Popup"
        xmlns:UserControl="clr-namespace:UbiGEM.Net.Simulator.Host.UserControls"
        mc:Ignorable="d"
        Title="SettingObjectSelectorForS14F1" Height="600" Width="550" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" AllowsTransparency="True" ResizeMode="CanResizeWithGrip" WindowStyle="None" >
    <Grid Background="{StaticResource UbiSamThemeBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="5 5 5 0">
            <GroupBox Name="grbTitle" Header="Object Selector">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Specifier" VerticalContentAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Name="cboObjectSpecifier" DropDownOpened="cboObjectSpecifier_DropDownOpened" SelectionChanged="cboObjectSpecifier_SelectionChanged"/>
                    <Label Grid.Row="2" Grid.Column="0" Content="Type" VerticalContentAlignment="Center"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" Name="cboObjectType" DropDownOpened="cboObjectType_DropDownOpened" SelectionChanged="cboObjectType_SelectionChanged"/>
                    <Label Grid.Row="4" Grid.Column="0" Content="ObjectID" VerticalContentAlignment="Top" />
                    <DataGrid Name="dgrObjectID" Grid.Row="4" Grid.Column="1" HeadersVisibility="None"
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="False" SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="V" Binding="{Binding IsSelected}" IsReadOnly="False" >
                                <DataGridCheckBoxColumn.CellStyle>
                                    <Style>
                                        <EventSetter Event="CheckBox.Checked" Handler="cboObjectIDChecked" />
                                        <EventSetter Event="CheckBox.Unchecked" Handler="cboObjectIDUnchecked" />
                                    </Style>
                                </DataGridCheckBoxColumn.CellStyle>
                            </DataGridCheckBoxColumn>
                            <DataGridTextColumn Header="ObjectID" Binding="{Binding OBJID}" IsReadOnly="True" Width="*" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label Grid.Row="6" Grid.Column="0" Content="Qualifiers" VerticalContentAlignment="Top"/>
                    <DataGrid Name="dgrAttributeQualifiers" Grid.Row="6" Grid.Column="1" 
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="False" >
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="V" Binding="{Binding IsSelected}" IsReadOnly="False" />
                            <DataGridTextColumn Header="ATTRID" Binding="{Binding ATTRID}"  IsReadOnly="True" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn Header="ATTRDATA" Binding="{Binding ATTRDATA}"  IsReadOnly="False" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn Header="ATTRRELN" Binding="{Binding ATTRRELN}"  IsReadOnly="False" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label Grid.Row="8" Grid.Column="0" Content="Attributes" VerticalContentAlignment="Top" />
                    <DataGrid Name="dgrAttributes" Grid.Row="8" Grid.Column="1" HeadersVisibility="None"
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="False" SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="V" Binding="{Binding IsSelected}" IsReadOnly="False" />
                            <DataGridTextColumn Header="ObjectID" Binding="{Binding ATTRID}"  IsReadOnly="True" Width="*" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource PopupBottomArea}">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Close" Click="btnClose_Click" IsCancel="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>