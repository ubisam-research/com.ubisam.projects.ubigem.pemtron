<Window x:Class="UbiGEM.Net.Simulator.Host.Popup.SettingTerminalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UbiGEM.Net.Simulator.Host.Popup"
        xmlns:UserControl="clr-namespace:UbiGEM.Net.Simulator.Host.UserControls"
        mc:Ignorable="d"
        Title="SettingTerminalWindow" Height="300" Width="300" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" AllowsTransparency="True" ResizeMode="CanResizeWithGrip" WindowStyle="None" >
    <Grid Background="{StaticResource UbiSamThemeBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="5 5 5 0">
            <GroupBox Name="grbTitle" Header="Terminal Message">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="7" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label Content="TID" />
                        <TextBox Name="txtTid" Grid.Column="1" />
                    </Grid>

                    <TextBox Name="txtTerminamMessage" Grid.Column="0" Grid.Row="2" VerticalContentAlignment="Top" AcceptsReturn="True" Padding="24 0 24 0"/>

                    <Grid Name="grdMultiMessage" Grid.Row="2" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <UserControl:ClientMenuControl OnAdd="ClientMenuControl_OnAdd" OnRemove="ClientMenuControl_OnRemove" />
                        <DataGrid Name="dgrTerminalMessage" Grid.Row="1" HeadersVisibility="None"
                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="False" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Terminal Message" Binding="{Binding Value}" ElementStyle="{StaticResource DataGridTextColumnElement}" >
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource DataGridTextColumnEditing}">
                                            <Setter Property="AcceptsReturn" Value="True" />
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </GroupBox>
        </Border>
        <Border Grid.Row="1" Style="{StaticResource PopupBottomArea}">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Apply" Click="btnApply_Click" />
                <Button Grid.Column="3" Content="Close" Click="btnClose_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>