<Window x:Class="UbiGEM.Net.Simulator.Host.Popup.AlarmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UbiGEM.Net.Simulator.Host.Popup"
        xmlns:Controls="clr-namespace:UbiGEM.Net.Simulator.Host.UserControls"
        mc:Ignorable="d"
        Title="AlarmWindow" Height="500" Width="600" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" AllowsTransparency="True" ResizeMode="CanResizeWithGrip" WindowStyle="None" >
    <Grid Background="{StaticResource UbiSamThemeBackground}">
        <Grid.RowDefinitions >
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Border BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="5 5 5 0" >
            <GroupBox Header="Alarms" >
                <Grid Margin="0 -24 0 0" >
                    <Grid.RowDefinitions >
                        <RowDefinition Height="24" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Controls:ClientMenuControl x:Name="ctlAddRemove" Grid.Row="0" OnAdd="ClientMenu_OnAdd" OnRemove="ClientMenu_OnRemove" Margin="0 -27 1 0" />

                    <DataGrid Name="dgrAlarm" Grid.Row="1" FrozenColumnCount="2" SelectionChanged="dgrAlarm_SelectionChanged"
                              IsReadOnly="False" CanUserAddRows="False" CanUserDeleteRows="False"
                              >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="UGC" Binding="{Binding IsInheritance}" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn x:Name="dgcALID" Header="ALID" Binding="{Binding ID}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}"/>
                            <DataGridTextColumn x:Name="dgcALCD" Header="ALCD" Binding="{Binding Code}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}"/>
                            <DataGridTextColumn x:Name="dgcDescription" Header="ALTX" Binding="{Binding Description}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Border>

        <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource PopupBottomArea}">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Save" Click="btnSave_Click" />
                <Button Grid.Column="3" Content="Close" Click="btnClose_Click" IsCancel="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>