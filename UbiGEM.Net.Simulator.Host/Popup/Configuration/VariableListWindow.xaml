<Window x:Class="UbiGEM.Net.Simulator.Host.Popup.VariableListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UbiGEM.Net.Simulator.Host.Popup"
        xmlns:Controls="clr-namespace:UbiGEM.Net.Simulator.Host.UserControls"
        xmlns:converter="clr-namespace:UbiGEM.Net.Simulator.Host.Converter" 
        mc:Ignorable="d"
        Title="Variable List Setting" Height="500" Width="1000" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" AllowsTransparency="True" ResizeMode="CanResizeWithGrip" WindowStyle="None" >
    <Window.Resources>
        <converter:VariableType2String x:Key="cvtVariableType2String" />
    </Window.Resources>
    <Grid Background="{StaticResource UbiSamThemeBackground}">
        <Grid.RowDefinitions >
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Border BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="5 5 5 0" >
            <GroupBox Header="Child Variable Setting" Style="{StaticResource UbiSamThemeGroupBox}">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="19" MinWidth="19" MaxWidth="19" />
                        <ColumnDefinition Width="450" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="33" MinWidth="33" MaxWidth="33"/>
                        </Grid.ColumnDefinitions>
                        <Border BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" >
                            <GroupBox Header="Selected Variables" >
                                <DataGrid Name="dgrSelected" FrozenColumnCount="2" CanUserAddRows="False" CanUserDeleteRows="False" SelectionChanged="dgrSelected_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="VID" Binding="{Binding VID}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                                        <DataGridTextColumn Header="Type" Binding="{Binding VIDType, Converter={StaticResource cvtVariableType2String}}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                                        <DataGridTextColumn Header="Format" Binding="{Binding Format}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                                        <DataGridTextColumn Header="Length" Binding="{Binding Length}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                                        <DataGridTextColumn Header="Value" Binding="{Binding Value}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>
                        </Border>
                        <Grid Grid.Column="2" Grid.RowSpan="2" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Controls:UCUpDownButton x:Name="ctlUpDown" Grid.Row="1" OnFirst="ctlUpDown_OnFirst" OnUp="ctlUpDown_OnUp" OnDown="ctlUpDown_OnDown" OnLast="ctlUpDown_OnLast"/>
                            <Controls:UCSelectUnSelectButton x:Name="ctlSelect" Grid.Row="3" OnSelect="UCSelectUnSelectButton_OnSelect" OnUnselect="UCSelectUnSelectButton_OnUnselect"/>
                        </Grid>
                    </Grid>

                    <GridSplitter Grid.Column="1" Style="{DynamicResource UbiSamThemeGridSplitter}" HorizontalAlignment="Center" ResizeDirection="Columns"/>

                    <Border Grid.Column="2" BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" >
                        <GroupBox Header="All Variables" >
                            <Grid >
                                <DataGrid Name="dgrVariable" FrozenColumnCount="2" CanUserAddRows="False" CanUserDeleteRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="VID" Binding="{Binding VID}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                                        <DataGridTextColumn Header="Type" Binding="{Binding VIDType, Converter={StaticResource cvtVariableType2String}}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                                        <DataGridTextColumn Header="Format" Binding="{Binding Format}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </GroupBox>
                    </Border>
                </Grid>
            </GroupBox>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource PopupBottomArea}">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Name="btnListEdit" Content="List Edit" Click="btnListEdit_Click" Visibility="Collapsed" />
                <Button Grid.Column="2" Content="Close" Click="btnClose_Click" IsCancel="True" />
            </Grid>
        </Border>
    </Grid>
</Window>