<Window x:Class="UbiGEM.Net.Simulator.Host.Popup.VariableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UbiGEM.Net.Simulator.Host.Popup"
        xmlns:Controls="clr-namespace:UbiGEM.Net.Simulator.Host.UserControls"
        xmlns:converter="clr-namespace:UbiGEM.Net.Simulator.Host.Converter" 
        xmlns:common="clr-namespace:UbiGEM.Net.Simulator.Host.Common"
        mc:Ignorable="d"
        Title="VariableWindow" Height="700" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" AllowsTransparency="True" ResizeMode="CanResizeWithGrip" WindowStyle="None" >
    <Window.Resources>
        <common:SECSItemFormatAllWithL x:Key="SECSItemFormatAllWithL" />
        <converter:VariableType2String x:Key="cvtVariableType2String" />
    </Window.Resources>
    <Grid Background="{StaticResource UbiSamThemeBackground}">
        <Grid.RowDefinitions >
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Border Grid.Column="0" BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="5 5 5 0" >
            <GroupBox Grid.Column="0" Header="Variables" >
                <Grid Margin="0 -24 0 0" >
                    <Grid.RowDefinitions >
                        <RowDefinition Height="24" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Controls:ClientMenuControl x:Name="ctlFunction" Grid.Row="0" OnAdd="ClientMenuControl_OnAdd" OnRemove="ClientMenuControl_OnRemove" Margin="0 -27 1 0" />

                    <DataGrid Name="dgrVariable" Grid.Row="1" FrozenColumnCount="3" 
                                          IsReadOnly="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                          SelectionChanged="dgrVariable_SelectionChanged"
                                          >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="UGC" Binding="{Binding IsInheritance}" IsReadOnly="True" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn x:Name="dgcVID" Header="VID" Binding="{Binding VID}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn x:Name="dgcName" Header="Name" Binding="{Binding Name}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn Header="Type" Binding="{Binding VIDType, Converter={StaticResource cvtVariableType2String}}" IsReadOnly="True" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridComboBoxColumn x:Name="dgcFormat" Header="Format" CanUserSort="False" 
                                                                SelectedValueBinding="{Binding Format}" ItemsSource="{StaticResource SECSItemFormatAllWithL}" 
                                                    ElementStyle="{StaticResource DataGridComboBoxColumnElement}"
                                                    >
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource DataGridComboBoxColumnEditing}">
                                        <EventSetter Event="SelectionChanged" Handler="dgcFormat_SelectionChanged" />
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>

                            <DataGridTextColumn x:Name="dgcLength" Header="Length" Binding="{Binding Length}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn Header="Value" Binding="{Binding Value}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn x:Name="dgcDescription" Header="Description" Binding="{Binding Description}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource PopupBottomArea}">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Name="btnListEdit" Content="List Edit" Click="btnListEdit_Click" Visibility="Collapsed" />
                <Button Grid.Column="2" Content="Save" Click="btnSave_Click" />
                <Button Grid.Column="4" Content="Close" Click="btnClose_Click" IsCancel="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>