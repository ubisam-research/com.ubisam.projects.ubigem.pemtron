<Window x:Class="UbiGEM.Net.Simulator.Host.Popup.CommandParameterListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UbiGEM.Net.Simulator.Host.Popup"
        xmlns:Controls="clr-namespace:UbiGEM.Net.Simulator.Host.UserControls"
        xmlns:common="clr-namespace:UbiGEM.Net.Simulator.Host.Common"
        mc:Ignorable="d"
        Title="EnhancedCommandParameterListWindow" Height="600" Width="600" Loaded="Window_Loaded" 
        WindowStartupLocation="CenterOwner" AllowsTransparency="True" ResizeMode="CanResizeWithGrip" WindowStyle="None" 
        >
    <Window.Resources>
        <common:SECSItemFormatAllWithL x:Key="SECSItemFormatAllWithL" />
    </Window.Resources>
    <Grid Background="{StaticResource UbiSamThemeBackground}">
        <Grid.RowDefinitions >
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Border BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="5 5 5 0" >
            <GroupBox Grid.Row="0" Header="Command Parameter List Setting" Style="{StaticResource UbiSamThemeGroupBox}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="37" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="2" Grid.Row="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32" />
                            <RowDefinition Height="7" />
                            <RowDefinition Height="32" />
                            <RowDefinition Height="7" />
                            <RowDefinition Height="32" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="7" />
                            <RowDefinition Height="0" />
                            <RowDefinition Height="0" />
                            <RowDefinition Height="0" />
                            <RowDefinition Height="32" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="33" MinWidth="33" MaxWidth="33"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Content="Command Name" />
                        <Label Name="lblCommandName" Grid.Row="0" Grid.Column="1" Content="CommandName"/>

                        <Label Grid.Row="2" Content="CP Name" />
                        <Label Name="lblCPName" Grid.Row="2" Grid.Column="1" Content="CP Name"/>

                        <Label Grid.Row="4" Content="CPVAL Stack" />
                        <DataGrid Name="dgrCPVALStack" Grid.Row="4" Grid.Column="1" Grid.RowSpan="2"
                                  FrozenColumnCount="1" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False"
                                    >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="24 0 24 0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridComboBoxColumn Header="Format" CanUserSort="False" 
                                                    SelectedValueBinding="{Binding Format}" ItemsSource="{StaticResource SECSItemFormatAllWithL}" >
                                    <DataGridComboBoxColumn.EditingElementStyle>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Margin" Value="24 0 24 0"/>
                                            <Setter Property="ItemContainerStyle">
                                                <Setter.Value>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Background" Value="{StaticResource UbiSamThemeComboBoxBackground}" />
                                                    </Style>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DataGridComboBoxColumn.EditingElementStyle>
                                    <DataGridComboBoxColumn.ElementStyle>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="Margin" Value="24 0 24 0" />
                                        </Style>
                                    </DataGridComboBoxColumn.ElementStyle>
                                </DataGridComboBoxColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!--
                        <Label Grid.Row="7" Content="List Type" />
                        <Grid Grid.Row="7" Grid.Column="1" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <RadioButton Name="btnListTypeA" Grid.Column="0" Content="A" Click="btnListTypeA_Click" />
                            <RadioButton Name="btnListTypeB" Grid.Column="1" Content="B" Click="btnListTypeB_Click" />
                        </Grid>
                        -->
                        
                        <Label Grid.Row="10" Content="CEPVAL" />
                        <DataGrid Name="dgrEnhancedCommandValue" Grid.Row="10" Grid.Column="1" Grid.RowSpan="2" FrozenColumnCount="1"
                                    IsReadOnly="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                    >
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="dgcValueName" Header="Name" Binding="{Binding Name,UpdateSourceTrigger=PropertyChanged}" ElementStyle="{StaticResource DataGridTextColumnElement}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" />
                                <DataGridComboBoxColumn Header="Format" CanUserSort="False" 
                                                                SelectedValueBinding="{Binding Format,UpdateSourceTrigger=PropertyChanged}" ItemsSource="{StaticResource SECSItemFormatAllWithL}" 
                                                        EditingElementStyle="{StaticResource DataGridComboBoxColumnEditing}" ElementStyle="{StaticResource DataGridComboBoxColumnElement}"
                                                        />
                                <DataGridTemplateColumn Header="Rule">
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Stretch">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Format}" Value="L" >
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <TextBox Text="{Binding GenerateRule}" TextAlignment="Left" Style="{DynamicResource CustomTextBoxStyleForDataGridTemplateColumn}"/>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Format}" Value="L" >
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <Button Content="Child Edit" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnChildEdit_Click"/>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Stretch">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Format}" Value="L" >
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <TextBlock Text="{Binding GenerateRule}" TextAlignment="Left" Style="{DynamicResource CustomTextBlockStyleForDataGridTemplateColumn}"/>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Format}" Value="L" >
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <Button Content="Child Edit" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnChildEdit_Click"/>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                
                                <DataGridTemplateColumn Header="Value">
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Stretch">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Format}" Value="L" >
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <TextBox Text="{Binding Value}" TextAlignment="Left" Style="{DynamicResource CustomTextBoxStyleForDataGridTemplateColumn}"/>
                                                    <!--<TextBox Text="{Binding Value}" TextAlignment="Left" TextChanged="txtValueValue_TextChanged" Style="{DynamicResource CustomTextBoxStyleForDataGridTemplateColumn}"/>-->
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Format}" Value="L" >
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <ComboBox ItemsSource="{Binding ChildLength}" SelectedValue="{Binding UseChildLength}" SelectedValuePath="Key" DisplayMemberPath="Value" Style="{DynamicResource CustomComboBoxStyleForDataGridTemplateColumn}" SelectionChanged="dgcValueChildLength_SelectionChanged" />
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Left" >
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CustomTextBlockStyleForDataGridTemplateColumn}">
                                                        <Setter Property="Text" Value="{Binding Value}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Format}" Value="L" >
                                                                <Setter Property="Text" Value="{Binding SelectedChildLength}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Controls:ClientMenuControl x:Name="ctlCommandValue" Grid.Row="10" Grid.Column="1" OnAdd="EnhancedCommandValue_OnAdd" OnRemove="EnhancedCommandValue_OnRemove" Margin="0 0 0 0" VerticalAlignment="Top"/>

                        <Grid Grid.Column="2" Grid.Row="10" Grid.RowSpan="2" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Controls:UCUpDownButton x:Name="ctlValueUpDown" Grid.Row="1" OnFirst="ctlValueUpDown_OnFirst" OnUp="ctlValueUpDown_OnUp" OnDown="ctlValueUpDown_OnDown" OnLast="ctlValueUpDown_OnLast"/>
                        </Grid>
                    </Grid>

                    <Border Grid.Row="1" Grid.ColumnSpan="5" BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="5 5 33 -5" >
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Rule Example" VerticalContentAlignment="Center" />
                            <Label Name="lblExample1" Grid.Column="1" VerticalContentAlignment="Center" ToolTip="Use Equipment Constant 15 with pattern 'A_True'"/>
                            <Label Name="lblExample2" Grid.Column="2" VerticalContentAlignment="Center" ToolTip="Use current value of VID=100 with pattern '1_AA'"/>
                            <Label Name="lblExample3" Grid.Column="3" VerticalContentAlignment="Center" ToolTip="Use random value [min=1,max=9], max include"/>
                            <Label Name="lblExample4" Grid.Column="4" VerticalContentAlignment="Center" ToolTip="Use incremental value [start=1,step=2] (1,3,5,7,9....)"/>
                        </Grid>
                    </Border>
                </Grid>
            </GroupBox>
        </Border>

        <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource PopupBottomArea}">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Save" Click="btnSave_Click" />
                <Button Grid.Column="3" Content="Close" Click="btnClose_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>
    