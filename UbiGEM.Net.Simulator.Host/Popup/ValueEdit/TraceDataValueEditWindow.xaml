<Window x:Class="UbiGEM.Net.Simulator.Host.Popup.ValueEdit.TraceDataValueEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UbiGEM.Net.Simulator.Host.Popup"
        xmlns:Controls="clr-namespace:UbiGEM.Net.Simulator.Host.UserControls"
        mc:Ignorable="d"
        Title="Trace Data Value Edit" Height="500" Width="450" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" AllowsTransparency="True" ResizeMode="CanResizeWithGrip" WindowStyle="None" >
    <Grid Background="{StaticResource UbiSamThemeBackground}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Border BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="5 5 5 0">
            <GroupBox Header="Trace Data Value Edit" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32" />
                        <RowDefinition Height="7" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="7" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="7" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="7" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Content="TRID" VerticalContentAlignment="Center" />
                    <Label Name="lblID" Grid.Column="2" Grid.Row="0" VerticalContentAlignment="Center" />

                    <Label Grid.Column="0" Grid.Row="2" Content="DSPER" VerticalContentAlignment="Center" />
                    <TextBox Name="txtPeriod" Grid.Column="2" Grid.Row="2" VerticalContentAlignment="Center" />

                    <Label Grid.Column="0" Grid.Row="4" Content="TOTSMP" VerticalContentAlignment="Center" />
                    <TextBox Name="txtTotalNumber" Grid.Column="2" Grid.Row="4" VerticalContentAlignment="Center" />

                    <Label Grid.Column="0" Grid.Row="6" Content="REPGSZ" VerticalContentAlignment="Center" />
                    <TextBox Name="txtGroupSize" Grid.Column="2" Grid.Row="6" VerticalContentAlignment="Center" />

                    <Label Grid.Column="0" Grid.Row="8" Content="Variables" VerticalContentAlignment="Center" />
                    <DataGrid Name="dgrVariables" Grid.Column="2" Grid.Row="8" Grid.RowSpan="2" 
                          CanUserAddRows="False" CanUserDeleteRows="False" FrozenColumnCount="1" IsReadOnly="True"
                          >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="VID" Binding="{Binding VID}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Border>
        <Border Grid.Row="1" Style="{StaticResource PopupBottomArea}">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="1" Content="Save" Click="btnSave_Click" />
                <Button Grid.Column="3" Content="Close" Click="btnCancel_Click" IsCancel="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>
