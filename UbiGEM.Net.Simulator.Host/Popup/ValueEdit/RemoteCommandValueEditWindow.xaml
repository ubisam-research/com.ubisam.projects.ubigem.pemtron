<Window x:Class="UbiGEM.Net.Simulator.Host.Popup.ValueEdit.RemoteCommandValueEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UbiGEM.Net.Simulator.Host.Popup"
        xmlns:Controls="clr-namespace:UbiGEM.Net.Simulator.Host.UserControls"
        mc:Ignorable="d"
        Title="Remote Command Value Edit" Height="480" Width="640" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" AllowsTransparency="True" ResizeMode="CanResizeWithGrip" WindowStyle="None" >
    <Grid Background="{StaticResource UbiSamThemeBackground}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Border BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="5 5 5 0" >
            <GroupBox Header="Remote Command Value Edit" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32" />
                        <RowDefinition Height="7" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="7" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="7" />
                        <RowDefinition Height="32" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Content="Name" VerticalContentAlignment="Center" />
                    <Label Name="lblName" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" VerticalContentAlignment="Center" />

                    <Label Grid.Column="0" Grid.Row="2" Content="ValueSet" VerticalContentAlignment="Center" />
                    <Label Name="lblValueSet" Grid.Column="1" Grid.Row="2" VerticalContentAlignment="Center" />
                    <Grid Grid.Column="3" Grid.Row="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                    </Grid>

                    <Label Grid.Column="0" Grid.Row="4" Content="Description" VerticalContentAlignment="Center" />
                    <Label Name="lblDescription" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" VerticalContentAlignment="Center" />

                    <Label Grid.Column="0" Grid.Row="6" Content="Parameters" VerticalContentAlignment="Center" />
                    <DataGrid Name="dgrCommandParameters" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="3" Grid.RowSpan="2" IsReadOnly="False" 
                            CanUserAddRows="False" CanUserDeleteRows="False" FrozenColumnCount="1"
                            >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn Header="Format" Binding="{Binding Format}" IsReadOnly="True" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn Header="Count" Binding="{Binding Count}" >
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource DataGridTextColumnEditing}">
                                        <Setter Property="UIElement.IsEnabled" Value="{Binding IsCountEditable}" />
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextColumnElement}">
                                        <Setter Property="UIElement.IsEnabled" Value="{Binding IsCountEditable}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Rule" Binding="{Binding GenerateRule}" IsReadOnly="False" EditingElementStyle="{StaticResource DataGridTextColumnEditing}" ElementStyle="{StaticResource DataGridTextColumnElement}" />
                            <DataGridTextColumn Header="Value" Binding="{Binding Value}" IsReadOnly="False" ElementStyle="{StaticResource DataGridTextColumnElement}" >
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource DataGridTextColumnEditing}">
                                        <Setter Property="AcceptsReturn" Value="False" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Format}" Value="A">
                                                <Setter Property="AcceptsReturn" Value="True" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Border>

        <Border Grid.Row="1" Grid.ColumnSpan="4" BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="5 5 5 0" >
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="32" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Rule Example" VerticalContentAlignment="Center" />
                <Label Name="lblExample1" Grid.Row="0" Grid.Column="1" VerticalContentAlignment="Center" ToolTip="Use Equipment Constant 15 with pattern 'A_True'"/>
                <Label Name="lblExample2" Grid.Row="0" Grid.Column="2" VerticalContentAlignment="Center" ToolTip="Use current value of VID=100 with pattern '1_AA'"/>
                <Label Name="lblExample3" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" ToolTip="Use random value [min=1,max=9], max include"/>
                <Label Name="lblExample4" Grid.Row="1" Grid.Column="2" VerticalContentAlignment="Center" ToolTip="Use incremental value [start=1,step=2] (1,3,5,7,9....)"/>
            </Grid>
        </Border>
        <Border Grid.Row="2" Style="{StaticResource PopupBottomArea}">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Save" Click="btnSave_Click" />
                <Button Grid.Column="3" Content="Close" Click="btnCancel_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>
