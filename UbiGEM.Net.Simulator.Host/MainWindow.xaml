<Window x:Class="UbiGEM.Net.Simulator.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UbiGEM.Net.Simulator.Host"
        xmlns:MessageTest="clr-namespace:UbiGEM.Net.Simulator.Host.UserControls.MessageTest"
        xmlns:UserControls="clr-namespace:UbiGEM.Net.Simulator.Host.UserControls"
        mc:Ignorable="d"
        Title="GEM Host Simulator" Height="700" Width="1000" Loaded="Window_Loaded" Closed="Window_Closed" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Icon="Resources/Images/32_2.ico"
        >
    <Window.Resources>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Height" Value="Auto" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="0 10 2 0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <GroupBox Header="{TemplateBinding Header}" >
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Stretch" FontSize="12" Margin="0 0 15 0"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                        </GroupBox>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="{StaticResource UbiSamThemeBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="19" MinWidth="19" MaxWidth="19" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="mnuNew_Click" />
                <Separator />
                <MenuItem Header="Open" Click="mnuOpen_Click" />
                <MenuItem Header="Save" Click="mnuSave_Click" />
                <MenuItem Name="mnuSaveAs" Header="Save As..." Click="mnuSaveAs_Click" />
                <Separator />
                <MenuItem Header="Exit" Click="mnuExit_Click" />
            </MenuItem>
            <MenuItem Header="Connection">
                <MenuItem Header="Open Connection" Click="mnuOpenConnection_Click" />
                <MenuItem Header="Close Connection" Click="mnuCloseConnection_Click" />
                <Separator />
                <MenuItem Header="Configuration" Click="mnuConfiguration_Click" />
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Name="mnuDefault" Header="Default" Click="mnuDefault_Click" IsCheckable="True" IsChecked="True"/>
                <MenuItem Name="mnuStandardMessage" Header="Standard Message" Click="mnuStandardMessage_Click" IsCheckable="True"/>
                <MenuItem Name="mnuUserMessage" Header="User Message" Click="mnuUserMessage_Click"  IsCheckable="True"/>
            </MenuItem>
            <MenuItem Header="Configuration">
                <MenuItem Header="Equipment Constatns" Click="mnuEquipmentConstatns_Click" />
                <MenuItem Header="Variables" Click="mnuVariables_Click" />
                <MenuItem Header="Reports" Click="mnuReports_Click" />
                <MenuItem Header="Collection Events" Click="mnuCollectionEvents_Click" />
                <Separator />
                <MenuItem Header="Alarms" Click="mnuAlarms_Click" />
                <Separator />
                <MenuItem Header="Remote Commands" Click="mnuRemoteCommands_Click" />
                <MenuItem Header="Enhanced Remote Commands" Click="mnuEnhancedRemoteCommands_Click" />
                <Separator />
                <MenuItem Header="Trace Data" Click="mnuTraceData_Click" />
                <MenuItem Header="Limit Monitoring" Click="mnuLimitMonitoring_Click" />
                <Separator />
                <MenuItem Header="Formatted Process Program" Click="mnuFormattedProcessProgram_Click" />
                <Separator Visibility="Visible"/>
                <MenuItem Header="WafrMap Manager" Click="mnuWaferMapManager_Click" Visibility="Visible"/>
                <MenuItem Header="Map Data Type 1" Click="mnuMapDataType1_Click" Visibility="Visible"/>
                <MenuItem Header="Map Data Type 2" Click="mnuMapDataType2_Click" Visibility="Visible"/>
                <MenuItem Header="Map Data Type 3" Click="mnuMapDataType3_Click" Visibility="Visible"/>
                <Separator Visibility="Visible"/>
                <MenuItem Header="Object Manager" Click="mnuObjectManager_Click" Visibility="Visible"/>
                <MenuItem Header="Created Object Manager" Click="mnuObjectCreatedManager_Click" Visibility="Visible"/>
                <MenuItem Header="Supervised Object Manager" Click="mnuSupervisedObjectManager_Click" Visibility="Visible"/>
                <Separator />
                <MenuItem Header="ACK and Reply Setting" Click="mnuAckAndReply_Click" />
            </MenuItem>
        </Menu>
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="10 20 5 0">
            <Grid Name="grdLeft">
                <Grid Name="grdMain">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="19" MinHeight="19" MaxHeight="19" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="19" MinWidth="19" MaxWidth="19" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="GEM State" >
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="0" Grid.Row="0" Content="Communication State" />
                                <Rectangle x:Name="recCommunicationState" Grid.Column="1" Grid.Row="0" Fill="DarkRed"/>
                                <Label x:Name="lblCommunicationState" Grid.Column="1" Grid.Row="0" Content="NotCommunication"/>

                                <Label Grid.Column="0" Grid.Row="2" Content="Control State" />
                                <Rectangle x:Name="recControlState" Grid.Column="1" Grid.Row="2" Fill="DarkRed"/>
                                <Label x:Name="lblControlState" Grid.Column="1" Grid.Row="2" Content="EquipmentOffline"/>
                            </Grid>
                        </ScrollViewer>
                    </GroupBox>

                    <GridSplitter Grid.Column="1" Grid.Row="0" Style="{DynamicResource UbiSamThemeGridSplitter}" HorizontalAlignment="Center" ResizeDirection="Columns"/>

                    <GroupBox Grid.Column="2" Header="Message">
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="30" />
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="1" Grid.Row="0" Content="S1F15" ToolTip="Offline Request" Click="btnS1F15_Click" />
                                <Button Grid.Column="1" Grid.Row="2" Content="S1F17" ToolTip="Online Request" Click="btnS1F17_Click" />

                                <Button Grid.Column="1" Grid.Row="4" Content="S2F17" ToolTip="Date and Time Request" Click="btnS2F17_Click" />
                                <Button Grid.Column="1" Grid.Row="6" Content="S2F31" ToolTip="Date and Time Set Request" Click="btnS2F31_Click" />

                                <Button Grid.Column="1" Grid.Row="8" Content="S10F3" ToolTip="Terminal Display, Single" Click="btnS10F3_Click" />
                            </Grid>
                        </ScrollViewer>
                    </GroupBox>

                    <GridSplitter Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Center" ResizeDirection="Rows"/>

                    <Border Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Padding="0" >
                        <TabControl Margin="0" Padding="0" >
                            <TabItem Header="RCMD" >
                                <UserControls:RemoteCommandControl x:Name="ctlRCMD" Padding="5" Background="{StaticResource UbiSamThemeBackground}"/>
                            </TabItem>
                            <TabItem Header="ERCMD" >
                                <UserControls:EnhancedRemoteCommandControl x:Name="ctlERCMD" Padding="5" Background="{StaticResource UbiSamThemeBackground}"/>
                            </TabItem>
                            <TabItem Header="Trace Data" >
                                <UserControls:TraceDataControl x:Name="ctlTraceData" Padding="5" Background="{StaticResource UbiSamThemeBackground}"/>
                            </TabItem>
                            <TabItem Header="Limit Monitoring" >
                                <UserControls:LimitMonitoringControl x:Name="ctlLimitMonitoring" Padding="5" Background="{StaticResource UbiSamThemeBackground}"/>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
                <Grid Name="grdMessageTest" Visibility="Collapsed">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" >
                        <UserControls:StandaloneTestControl x:Name="ctlMessageTest" />
                    </ScrollViewer>
                </Grid>
                <Grid Name="grdUserMessage" Visibility="Collapsed">
                    <UserControls:UserMessageControl x:Name="ctlUserMessage" />
                </Grid>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" Grid.Row="1" Style="{DynamicResource UbiSamThemeGridSplitter}" HorizontalAlignment="Center" ResizeDirection="Columns"/>

        <Border Grid.Column="2" Grid.Row="1" BorderThickness="1" BorderBrush="{StaticResource UbiSamThemeBorderBrush}" Margin="5 20 10 0">
            <GroupBox Header="Log" Margin="0" Padding="0">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="1" Name="chkUseSECS2Log" IsChecked="True" Content="Display SECS2 Log" Margin="0 -26 0 0" Checked="chkUseSECS2Log_Checked" Unchecked="chkUseSECS2Log_Unchecked" />
                    <RichTextBox Name="txtLog" Grid.Row="1" Grid.ColumnSpan="2" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="5" >
                        <RichTextBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Name="mnuAutoScroll" Header="Auto Scroll" Click="mnuAutoScroll_Click" IsCheckable="True" IsChecked="True" />
                                <Separator />
                                <MenuItem Header="Clear" Click="mnuLogClear_Click" />
                            </ContextMenu>
                        </RichTextBox.ContextMenu>
                    </RichTextBox>
                </Grid>
            </GroupBox>
        </Border>
    </Grid>
</Window>
